[alias]
	co = checkout
	st = status
	br = branch
	ci = commit
	bd = branch -D
        amend = commit --amend
	bk = checkout -
	dif = diff --stat --color
        dt = difftool
        lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%C    reset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[user]
	name = YourName 
	email = youremail@email.com 
	
[color]
	ui = auto
	diff = auto
	branch = auto
	status = auto

[core]
	excludesfile = $HOME/.gitignore_global
